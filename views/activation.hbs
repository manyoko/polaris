{{> site_navbar}}

<div class="site-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h4 class="h3 mb-5 text-black">Activate Your Polaris Account</h4>
      </div>
      <div class="col-md-12">

        <form action="/users/activateAccount/{{token}}" method="post">

          <div class="p-3 p-lg-5 border">
            
            <div class="form-group row">
              <div class="col-md-12">
                <label for="activation" class="text-black">click to activate <span class="text-success">*</span></label>
                <input type="hidden" class="form-control" id="email" name="token" placeholder="" value="{{token}}">
              </div>
            </div>
         
            <div class="form-group row">
              <div class="col-lg-12">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="Activate">
              </div>
            </div>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>